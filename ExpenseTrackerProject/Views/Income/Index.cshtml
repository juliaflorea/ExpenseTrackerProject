
@model IEnumerable<ExpenseTrackerProject.Models.Income>

@{
    ViewData["Title"] = "Index";
}

<h1>Incomes</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Income</a>
</p>

<div class="card-container d-flex flex-wrap">
    @foreach (var item in Model)
    {
            <div class="card m-2" style="width: 18rem; background-color: #f2f2f2;">
                <div class="card-header">
                    <h3>@Html.DisplayFor(modelItem => item.Description)</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">Amount: @Html.DisplayFor(modelItem => item.Amount)</p>
                    <p class="card-text">User: @Html.DisplayFor(modelItem => item.User.Name)</p>
                    <p class="card-text">Date: @Html.DisplayFor(modelItem => item.CreatedAt)</p>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.IncomeId" class="btn btn-primary mr-2">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.IncomeId" class="btn btn-secondary mr-2">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.IncomeId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
    }
</div>

