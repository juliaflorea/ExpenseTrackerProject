

@model IEnumerable<ExpenseTrackerProject.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container my-4" >
    <div class="row" >
        <div class="col">
            <h1 id="categoriesHeading">Categories</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>

    <div class="card-deck" >
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="background-color:   #199D40   ">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.CreatedAt)</p>
                    <div class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-secondary btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
