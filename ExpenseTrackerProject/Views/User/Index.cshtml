@model IEnumerable<ExpenseTrackerProject.Models.User>

@{
    ViewData["Title"] = "Index";
}

<style>
    
    ::selection {
        background-color: #E29853;
        color: #fff;
    }
</style>

<h1 id="Users">Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr style="color: #E64F14;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color:   #615551 ; color:  azure ;">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId"  class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId"  class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
