@model ExpenseTrackerProject.Models.Expense

@{
    ViewData["Title"] = "Details";
}

<style>
    dl dt {
        margin-bottom: 0.5em;
    }

    dl dd {
        margin-bottom: 1em;
    }

    h4, hr {
        color: #fff;
        background-color: #007bff;
        padding: 5px;
        border-radius: 5px;
    }
</style>

<h1>Details</h1>


<div>
  
    <h4 style="color: #007bff ">Expense</h4>
    <hr  />
<dl class="row ">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.CategoryId)</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.PaymentMethod.PaymentMethodId)</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Amount)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Amount)</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
</dl>

<div >
    <a asp-action="Edit" asp-route-id="@Model?.ExpenseId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
