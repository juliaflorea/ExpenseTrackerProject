

@model IEnumerable<ExpenseTrackerProject.Models.PaymentMethod>

@{
    ViewData["Title"] = "Index";
}

<h1>Payment Methods</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="d-flex flex-wrap justify-content-center">
    @foreach (var item in Model)
    {
        <div class="d-flex flex-column align-items-center">
            <div class="card m-2" style="width: 150px; height: 150px; background-color: #60A22F ; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
                <div class="card-text text-center text-white">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="card-text text-center text-white">
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </div>
            </div>
            <div class="d-flex flex-column align-items-center">
                <a asp-action="Edit" asp-route-id="@item.PaymentMethodId" class="btn btn-primary mt-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.PaymentMethodId" class="btn btn-secondary mt-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.PaymentMethodId" class="btn btn-danger mt-2">Delete</a>
            </div>
        </div>
    }
</div>
